<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res/com.android.calculator2"
    android:id="@+id/simplePad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.android.calculator2.ColorButton
            android:id="@+id/digit7"
            style="@style/yun_styles_white_land"
            android:text="@string/digit7"
             />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit8"
            style="@style/yun_styles_white_land"
            android:text="@string/digit8"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit9"
            style="@style/yun_styles_white_land"
            android:text="@string/digit9"
             />
        <com.android.calculator2.ColorButton
            android:id="@+id/div"
            style="@style/yun_styles_dark_land"
            android:text="@string/div" 
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.android.calculator2.ColorButton
            android:id="@+id/digit4"
            style="@style/yun_styles_white_land"
            android:text="@string/digit4"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit5"
            style="@style/yun_styles_white_land"
            android:text="@string/digit5"
             />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit6"
            style="@style/yun_styles_white_land"
            android:text="@string/digit6"
             />
        <com.android.calculator2.ColorButton
            android:id="@+id/mul"
            style="@style/yun_styles_dark_land"
            android:text="@string/mul" 
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.android.calculator2.ColorButton
            android:id="@+id/digit1"
            style="@style/yun_styles_white_land"
            android:text="@string/digit1"
   />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit2"
            style="@style/yun_styles_white_land"
            android:text="@string/digit2"
         />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit3"
            style="@style/yun_styles_white_land"
            android:text="@string/digit3"
           />
        <com.android.calculator2.ColorButton
            android:id="@+id/minus"
            style="@style/yun_styles_dark_land"
            android:text="@string/minus" 
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.android.calculator2.ColorButton
            android:id="@+id/dot"
            style="@style/yun_styles_white_land"
            android:text="@string/dot"
             />
        <com.android.calculator2.ColorButton
            android:id="@+id/digit0"
            style="@style/yun_styles_white_land"
            android:text="@string/digit0"
            />
        <com.android.calculator2.ColorButton
            android:id="@+id/equal"
            style="@style/yun_styles_dark_land"
            android:text="@string/equal" 
        />
        <com.android.calculator2.ColorButton
            android:id="@+id/plus"
            style="@style/yun_styles_dark_land"
            android:text="@string/plus" 
       />
    </LinearLayout>
</LinearLayout>